#
# NEED to RUN fetchmail from root
#
# Global
# logging to syslog
set syslog
# run as daemon with poll interval (seconds)
set daemon 1800
# 
poll mail.aokiconsulting.com:
    # server options
    with nodns,
    with protocol pop3,
    # user options
    user remote_account_name there, is, local_account_name here,
    with stripcr,
    with password my_secret; 
