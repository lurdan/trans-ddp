msgstr "\"<literal>&lt;comando&gt; &amp;&amp; &lt;se_successo_esegue_anche_questo_comando&gt; || true</literal>\""

#. type: Content of: <book><chapter><section><section><itemizedlist><listitem><simpara>
#: debian-reference.en.xmlt:29714
msgid "\"<literal>&lt;command&gt; || &lt;if_not_success_run_this_command_too&gt; || true</literal>\""
msgstr "\"<literal>&lt;comando&gt; || &lt;se_non_successo_esegue_anche_questo_comando&gt; || true</literal>\""

#. type: Content of: <book><chapter><section><section><itemizedlist><listitem><simpara>
#: debian-reference.en.xmlt:29719
msgid "A multi-line script snippet as the following"
msgstr "Una porzione su più righe di script come la seguente"

#. type: Content of: <book><chapter><section><section><screen>
#: debian-reference.en.xmlt:29723
#, no-wrap
msgid ""
"if [ &lt;conditional_expression&gt; ]; then\n"
" &lt;if_success_run_this_command&gt;\n"
"else\n"
" &lt;if_not_success_run_this_command&gt;\n"
"fi"
msgstr ""
"if [ &lt;espressione_condizionale&gt; ]; then\n"
" &lt;se_successo_esegue_questo_comando&gt;\n"
"else\n"
" &lt;se_non_successo_esegue_questo_comando&gt;\n"
"fi"

#. type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xmlt:29728
