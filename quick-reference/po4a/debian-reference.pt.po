"  rm -f dists/unstable/Release.gpg ;\n"
"  gpg -u 3A3CB5A6 -bao dists/unstable/Release.gpg dists/unstable/Release'|\n"
"  ssh foo@www.example.com  2&gt;/dev/null ;\n"
"  echo 'Package archive created!'\";"
