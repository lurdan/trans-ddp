# type: Content of: <book><chapter><section><section><screen>
#: debian-reference.en.xml:18107
#, no-wrap
msgid "auth    required        pam_env.so read_env=1 envfile=/etc/default/locale"
msgstr ""

# type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xml:18108
msgid "into"
msgstr ""

# type: Content of: <book><chapter><section><section><screen>
#: debian-reference.en.xml:18109
#, no-wrap
msgid "auth    required        pam_env.so read_env=1 envfile=/etc/default/locale-x"
msgstr ""

# type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xml:18110
msgid "Then create a \"<literal>/etc/defaults/locale-gdm</literal>\" file with \"<literal>-rw-r--r-- 1 root root</literal>\" permission containing, eg. for Japanese message:"
