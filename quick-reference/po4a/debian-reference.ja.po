# type: Content of: <book><chapter><section><section><screen>
#: debian-reference.en.xml:18111
#, no-wrap
msgid "LANG=\"ja_JP.UTF-8\""
msgstr ""

# type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xml:18112
msgid "and keep the default \"<literal>/etc/defaults/locale</literal>\" file for other programs being:"
msgstr ""

# type: Content of: <book><chapter><section><section><screen>
#: debian-reference.en.xml:18113
#, no-wrap
msgid "LANG=\"en_US.UTF-8\""
msgstr ""

# type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xml:18114
msgid "This is the most generic technique to customize locale."
