msgstr "<ulink url=\"&bios;\">BIOS</ulink>の<ulink url=\"&smart;\">SMART</ulink>機能を有効にする。"

# type: Content of: <book><chapter><section><section><orderedlist><listitem><simpara>
#: debian-reference.en.xml:19295
msgid "Install the <literal>smartmontools</literal> package."
msgstr ""

# type: Content of: <book><chapter><section><section><orderedlist><listitem><simpara>
#: debian-reference.en.xml:19300
msgid "Identify your harddisk drives by listing them with <literal>df</literal>(1)."
msgstr ""

# type: Content of: <book><chapter><section><section><orderedlist><listitem><itemizedlist><listitem><simpara>
#: debian-reference.en.xml:19305
msgid "Let's assume a harddisk drive to be monitored as \"<literal>/dev/hda</literal>\"."
msgstr ""

# type: Content of: <book><chapter><section><section><orderedlist><listitem><simpara>
#: debian-reference.en.xml:19312
msgid "Check the output of \"<literal>smartctl -a /dev/hda</literal>\" to see if <ulink url=\"&smart;\">SMART</ulink> feature is actually enabled."
