#: debian-reference.en.xmlt:25725
#, no-wrap
msgid ""
"$ cd ~/path/to\n"
"$ cvs co module1\n"
"$ cd module1"
msgstr ""
"$ cd ~/path/to\n"
"$ cvs co module1\n"
"$ cd module1"

#. type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xmlt:25728 debian-reference.en.xmlt:25969
msgid "Make changes to the content as needed."
msgstr "Effectuez les modifications de contenu au besoin."

#. type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xmlt:25729 debian-reference.en.xmlt:25970
