#: debian-reference.en.xmlt:26616
#, no-wrap
msgid ""
"#!/bin/sh\n"
"ENCDN=iso-8859-1\n"
"for x in *;\n"
" do\n"
" mv \"$x\" $(echo \"$x\" | iconv -f $ENCDN -t utf-8)\n"
"done"
msgstr ""
"#!/bin/sh\n"
"ENCDN=iso-8859-1\n"
"for x in *;\n"
" do\n"
" mv \"$x\" $(echo \"$x\" | iconv -f $ENCDN -t utf-8)\n"
"done"

