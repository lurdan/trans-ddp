" script &lt;nom_script&gt;\n"
" map &lt;script_entre1&gt;\n"
" map &lt;script_entre2&gt;\n"
" map ..."

# type: Content of: <book><chapter><section><section><simpara>
#: debian-reference.en.xmlt:12771
