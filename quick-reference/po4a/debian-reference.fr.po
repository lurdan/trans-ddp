msgstr "&nbsp;<literal>$LOGICAL</literal>&nbsp;"

#: debian-reference.en.xmlt:12879
msgid "logical name (configuration name) of the interface being processed"
msgstr "nom logique (nom de configuration) de l'interface en cours de traitement"

# type: Content of: <book><chapter><section><section><table><tgroup><tbody><row><entry>
#: debian-reference.en.xmlt:12884
msgid "\"<literal>$ADDRFAM</literal>\""
msgstr "&nbsp;<literal>$ADDRFAM</literal>&nbsp;"

#: debian-reference.en.xmlt:12887
