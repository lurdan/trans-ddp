msgid "<ulink url=\"&wiredequivalentprivacy;\">Wired Equivalent Privacy</ulink>"
msgstr "<ulink url=\"&wiredequivalentprivacy;\">Wired Equivalent Privacy</ulink> (confidentialité équivalente à un réseau câblé)"

#: debian-reference.en.xmlt:12364
msgid "1st generation 64-bit (128-bit) wireless encryption standard with 40-bit key (deprecated)"
msgstr "première génération de norme de chiffrement sans fil sur 64 bits (128 bits) avec une clé sur 40 bits (dépassé)"

# type: Content of: <book><chapter><section><section><table><tgroup><tbody><row><entry>
#: debian-reference.en.xmlt:12369
msgid "WPA"
msgstr "WPA"

# type: Content of: <book><chapter><section><section><table><tgroup><tbody><row><entry>
#: debian-reference.en.xmlt:12372
msgid "<ulink url=\"&wifiprotectedaccess;\">Wi-Fi Protected Access</ulink>"
msgstr "<ulink url=\"&wifiprotectedaccess;\">Wi-Fi Protected Access</ulink> (Accès Wi-Fi protégé)"

#: debian-reference.en.xmlt:12375
msgid "2nd generation wireless encryption standard (most of 802.11i), compatible with WEP"
msgstr "seconde génération de norme de chiffrement sans fil (la plus grande partie de 802.11i), compatible avec WEP"

# type: Content of: <book><chapter><section><section><table><tgroup><tbody><row><entry>
