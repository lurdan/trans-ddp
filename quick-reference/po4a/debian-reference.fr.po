msgstr "<emphasis role=\"strong\">périphérique en mode caractère</emphasis> («&nbsp;character device&nbsp;») :"

#: debian-reference.en.xmlt:2224
msgid "Accessed one character at a time"
msgstr "permettent l'accès à un caractère à la fois"

# type: Content of: <book><chapter><section><section><table><tgroup><thead><row><entry>
#: debian-reference.en.xmlt:2229
msgid "1 character = 1 byte"
msgstr "1 caractère = 1 octet"

#: debian-reference.en.xmlt:2234
msgid "E.g. keyboard device, serial port, …"
msgstr "par exemple, les claviers, les ports série, ..."

# type: Content of: <book><chapter><section><section><table><tgroup><tbody><row><entry>
#: debian-reference.en.xmlt:2241
