#: debian-reference.en.xmlt:25757
msgid "<ulink url=\"&atutorialintroductiontogit;\">A tutorial introduction to git</ulink> (<literal>/usr/share/doc/git-doc/gittutorial.html</literal>)"
msgstr "<ulink url=\"&atutorialintroductiontogit;\">Un tutoriel d'introduction à git</ulink> «&nbsp;A tutorial introduction to git&nbsp;» (<literal>/usr/share/doc/git-doc/gittutorial.html</literal>)"

# type: Content of: <book><chapter><section><section><itemizedlist><listitem><simpara>
#: debian-reference.en.xmlt:25761
msgid "<ulink url=\"&atutorialintrodutiontogitparttwo;\">A tutorial introduction to git: part two</ulink> (<literal>/usr/share/doc/git-doc/gittutorial-2.html</literal>)"
msgstr "<ulink url=\"&atutorialintrodutiontogitparttwo;\">Un tutoriel d'introduction à git&nbsp;: deuxième partie</ulink> «&nbsp;A tutorial introduction to git: part two&nbsp;» (<literal>/usr/share/doc/git-doc/gittutorial-2.html</literal>)"

# type: Content of: <book><chapter><section><section><itemizedlist><listitem><simpara>
#: debian-reference.en.xmlt:25765
