#!/bin/sh

# This should solve issues with debiandoc for Polish quotation
# Any global fix can be done similary.

# $1 locale (lower case)
# $2 .txt filename

case $1 in
("pl")
	perl -i -p -e 's/,,/"/g;' -e "s/''/\"/g;" $2 
	;;
("zh-tw")
	perl -i -p -e 's/(³¹|¸`)\n/$1 /s;' $2
	perl -i -p -e 's/(³¹|¸`)\s*(\w+(?:\.\w*)*)(\s|,)/²Ä $2 $1$3/g;'  $2
	;;
(*)
	: # do nothing
;;
esac




