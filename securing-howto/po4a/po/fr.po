"    fi) | fmt\n"
"    echo\n"
"    sed 's/^/    /' < BAD\n"
"    echo\n"
"fi\n"
"\n"
"if grep -q ^ MISSING; then\n"
"    allokay=false\n"
"    (echo \"Les fichiers suivants de /var/lib/apt/lists manquaient. Cela\"\n"
"    echo \"pourrait vous faire manquer des mises à jours de paquets vulnérables.\"\n"
