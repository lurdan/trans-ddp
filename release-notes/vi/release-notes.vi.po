#~ "# echo 'DEVICE /dev/hd*[0-9] /dev/sd*[0-9]' &gt; /etc/mdadm/mdadm.conf\n"
#~ "# mdadm --examine --scan &gt;&gt; /etc/mdadm/mdadm.conf"
#~ msgstr ""
