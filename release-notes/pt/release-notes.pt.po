msgstr "ARM ('arm')"

# type: <p></p>
#: ../en/release-notes.en.sgml:74
msgid "MIPS ('mips' (Big endian) and 'mipsel' (Little endian))"
msgstr "MIPS ('mips' (Big endian) e 'mipsel' (Little endian))"

# type: <p></p>
