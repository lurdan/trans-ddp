#: ../en/release-notes.en.sgml:150
msgid "Intel x86 ('i386')"
msgstr "Intel x86 ('i386')"

# type: <p></p>
#: ../en/release-notes.en.sgml:151
msgid "Alpha ('alpha')"
msgstr "Alpha ('alpha')"

# type: <p></p>
