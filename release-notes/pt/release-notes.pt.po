#: ../en/release-notes.en.sgml:74
msgid "Intel x86 ('i386')"
msgstr "Intel x86 ('i386')"

# type: <p></p>
#: ../en/release-notes.en.sgml:74
msgid "Alpha ('alpha')"
msgstr "Alpha ('alpha')"

# type: <p></p>
#: ../en/release-notes.en.sgml:74
