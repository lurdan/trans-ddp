#!/bin/sh
# Since current SGML sources use traditional encoding,
# po system needs to know traditional encoding for each locale
# Eventually, following needs to be used with perl script
# /usr/share/perl5/DebianDoc_SGML/Locale/alias.pm
case $1 in
	ja)
		echo eucJP
		;;
	ko)
		echo eucKR
		;;
	pl)
		echo ISO8859-2
		;;
	ru)
		echo KOI8-R
		;;
	zh-cn)
		echo GB2312
		;;
	zh-tw)
		echo BIG5
		;;
	*)
		echo ISO8859-1
		;;
esac

