#!/bin/sh
# Since current SGML sources use traditional encoding, starting vim
# requires some care.  This helps you :)
MANUAL=maint-guide
# latin1 is auto detacted
case $1 in
$MANUAL.ja.sgml)
vim	"+e ++enc=eucJP  $MANUAL.ja.sgml"
;;
$MANUAL.ko.sgml)
vim	"+e ++enc=eucKR  $MANUAL.ko.sgml"
;;
$MANUAL.pl.sgml)
vim	"+e ++enc=LATIN2 $MANUAL.pl.sgml"
;;
$MANUAL.ru.sgml)
vim	"+e ++enc=KOI8-R $MANUAL.ru.sgml"
;;
$MANUAL.zh_CN.sgml)
vim	"+e ++enc=CP936  $MANUAL.zh_CN.sgml"
;;
$MANUAL.zh_TW.sgml)
vim	"+e ++enc=CP950   $MANUAL.zh_TW.sgml"
;;
*)
# all other auto detact latin1 or UTF-8
vim	$1
;;
esac
