#, no-wrap
msgid ""
"dh_testdir\n"
"dh_auto_clean\n"
"dh_clean\n"
msgstr ""
"dh_testdir\n"
"dh_auto_clean\n"
"dh_clean\n"

#. type: Content of: <book><chapter><section><section><itemizedlist><listitem><para>
